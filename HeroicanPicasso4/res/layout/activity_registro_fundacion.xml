<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_fondolineas"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/toolbar"/>
	    <FrameLayout
	        android:padding="@dimen/P_app"
	        android:id="@+id/regFun_frame"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="90"/>
	    
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
	        android:background="@color/app_color"
	        android:animateLayoutChanges="true"
	        >
	        <RelativeLayout 
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="match_parent"
	            android:id="@+id/regFun_back"
	            android:visibility="gone"
	            >
		        <Button
		            android:id="@+id/regFun_btnBack"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
					android:background="@drawable/selector"
					android:text="@string/reg_atras"
					android:textColor="@color/blanco"
		            />
	        </RelativeLayout>
	        
	        <TextView 
	            android:layout_width="1dp"
	            android:layout_height="match_parent"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
		        android:background="@color/blanco"
		        android:layout_centerInParent="true"
	            />
	        
	        <RelativeLayout 
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="match_parent"
	            android:id="@+id/contNext"
	            >
		        <Button
		            android:id="@+id/regFun_btnNext"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
					android:background="@drawable/selector"
					android:textColor="@color/blanco"
					android:padding="@dimen/P_buttons"
					android:text="@string/reg_siguiente"
		            />
	        </RelativeLayout>

	    </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
    
</RelativeLayout>
