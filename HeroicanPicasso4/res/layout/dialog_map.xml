<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dialMap_container"
    >
  
    <AbsoluteLayout
        android:id="@+id/dialMap_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_dialog"
        android:layout_marginLeft="@dimen/margin_dialog_left"
        android:layout_marginTop="@dimen/margin_dialog_top"
        android:layout_marginRight="@dimen/margin_dialog_right"
        android:layout_marginBottom="@dimen/margin_dialog_bottom"
        >
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
		android:padding="@dimen/padding_dialog"
        android:scrollbarThumbVertical="@drawable/shape_scroll"
        >

            <LinearLayout
                android:id="@+id/dialMap_lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/dialMap_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/H_buttons"
            android:background="@color/verdemanzana">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="90"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
			<ImageView
	            android:id="@+id/dialMap_icono"
		        android:layout_width="@dimen/H_buttons"
		        android:layout_height="match_parent"
	            android:padding="@dimen/P_buttons"
	            android:src="@drawable/ic_buscadorblanco"
	            />
			<TextView
			    android:id="@+id/dialMap_txtTitulo"
			    android:layout_width="fill_parent"
			    android:layout_height="match_parent"
			    android:gravity="center_vertical"
	            android:textColor="@color/blanco"
	            android:typeface="sans"
	            android:paddingLeft="4dp"
	            android:textStyle="bold"
			    />
            </LinearLayout>
			
		</LinearLayout>
		
        
    </LinearLayout>
			</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:animateLayoutChanges="true">
		       <FrameLayout
		           android:id="@+id/dialMap_frame"
		           android:layout_width="match_parent"
		           android:layout_height="0dp"
		           android:layout_weight="90"
		           />
		<RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/H_cancel"
	        >
		    <LinearLayout
		        android:id="@+id/selback"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@color/app_color"
		        >
		        	<Button
			           android:id="@+id/dialMap_btnAceptar"
			           android:layout_width="0dp"
			           android:layout_weight="1"
			           android:layout_height="match_parent"
			           android:background="@drawable/selector"
			           android:text="@string/aceptar"
			           android:textColor="@color/blanco" />
			       <Button
			           android:id="@+id/dialMap_btnCancelar"
			           android:layout_width="0dp"
			           android:layout_weight="1"
			           android:layout_height="match_parent"
			           android:background="@drawable/selector"
			           android:text="@string/cancelar"
			           android:textColor="@color/blanco" />
	
		    </LinearLayout>
	        <TextView 
	            android:layout_width="@dimen/divider_width"
	            android:layout_height="match_parent"
		        android:layout_marginTop="@dimen/divider_tab"
		        android:layout_marginBottom="@dimen/divider_tab"
		        android:background="@color/blanco"
		        android:layout_centerInParent="true"
	            />
	    </RelativeLayout>
	   </LinearLayout>
	   
	   </LinearLayout>

    </LinearLayout>
    
	   
	   
            <LinearLayout
				android:id="@+id/dialMap_progress" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
		        android:layout_marginLeft="@dimen/margin_dialog_left"
		        android:layout_marginTop="@dimen/margin_dialog_top"
		        android:layout_marginRight="@dimen/margin_dialog_right"
		        android:layout_marginBottom="@dimen/margin_dialog_bottom"
                >
				<ProgressBar
	               style="?android:attr/progressBarStyleLarge"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"/>
				
            </LinearLayout>
    
   </AbsoluteLayout>

</LinearLayout>
