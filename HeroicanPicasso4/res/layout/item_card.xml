<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/itemCard_container"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/H_card"
        android:orientation="vertical" 
        >
        <LinearLayout
            android:id="@+id/itemCard_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/H_buttons"
            android:background="@color/azulclaro">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="90"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
			<ImageView
	            android:id="@+id/itemCard_icono"
		        android:layout_width="@dimen/H_buttons"
		        android:layout_height="match_parent"
	            android:padding="@dimen/P_buttons"
	            />
			<TextView
			    android:id="@+id/itemCard_txtTitulo"
			    android:layout_width="fill_parent"
			    android:layout_height="match_parent"
			    android:gravity="center_vertical"
	            android:textColor="@color/blanco"
	            android:typeface="sans"
	            android:paddingLeft="4dp"
	            android:textSize="@dimen/font_card"
	            android:textStyle="bold"
			    />
            </LinearLayout>
			<ImageView
		        android:id="@+id/itemCard_btnCompartir"
		        android:layout_width="@dimen/H_buttons"
		        android:layout_height="@dimen/H_buttons"
		        android:src="@drawable/selector_compartir"
		        android:padding="@dimen/P_buttons"
		        android:contentDescription="@string/imagen_compartir"
		        />
		</LinearLayout>
		
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            >
	        <ImageView
	            android:id="@+id/itemCard_img"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:scaleType="centerCrop"
	            />
	        <Button
	            android:id="@+id/itemCard_btnAux" 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/selector"
	            />
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="@integer/w_trasparenciaSobr"/>  
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="@integer/w_trasparencia"
	            android:background="@drawable/shape_card">
	            <TextView
	                android:id="@+id/itemCard_txtDescripcion"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:textColor="@color/blanco"
	                android:padding="@dimen/P_cardText"
	                android:textSize="@dimen/font_card"
	                android:layout_marginRight="@dimen/H_buttons"
			        android:textStyle="bold"
	                />
	        </LinearLayout>
		</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="61"/>  
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="@integer/w_trasparencia"
	            android:gravity="right|center_vertical">
				<ImageView
			        android:id="@+id/itemCard_btnFavorito"
			        android:layout_width="@dimen/H_buttons"
			        android:layout_height="@dimen/H_buttons"
			        android:contentDescription="@string/imagen_corazon"
			        />
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="@integer/w_trasparenciadiv"
	            android:gravity="right">
				<TextView
			        android:id="@+id/itemCard_txtFavorito"
			        android:layout_width="wrap_content"
			        android:minWidth="@dimen/H_buttons"
			        android:layout_height="match_parent"
			        android:gravity="center_horizontal"
			        android:textColor="@color/blanco"
			        />
	        </LinearLayout>
		</LinearLayout>
		</RelativeLayout>
		
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>